@model IEnumerable<WebMVC.Models.PostListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Posts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUtc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostName)
        </td>
        @if(item.ModifiedUtc is null)
                {
        <td>
            @Html.DisplayFor(modelItem => item.CreatedUtc)
        </td>
                }
                else
                {
        <td>
            modified @Html.DisplayFor(modelItem => item.ModifiedUtc)
        </td>
                }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PostId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PostId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PostId })
        </td>
    </tr>
}

</table>
